{
  "name": "help-scout-mcp-server",
  "version": "1.3.0",
  "description": "The first MCP server for Help Scout - search conversations, threads, and inboxes with AI agents",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "help-scout-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/",
    "mcp.json",
    "README.md",
    "LICENSE",
    "claude-desktop-config.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "security": "semgrep --config .semgrep.yml .",
    "security:ci": "semgrep ci",
    "test": "jest",
    "test:docker": "node test-docker.cjs",
    "test:docker:ci": "node test-docker-ci.cjs",
    "clean": "rimraf dist",
    "version:patch": "node scripts/bump-version.cjs patch",
    "version:minor": "node scripts/bump-version.cjs minor",
    "version:major": "node scripts/bump-version.cjs major",
    "prepublishOnly": "npm run clean && npm run build",
    "prepack": "npm run build",
    "mcpb:build": "node scripts/build-dxt.js",
    "mcpb:pack": "npm run mcpb:build && cd helpscout-mcp-extension && npx @anthropic-ai/dxt pack",
    "build:all": "npm run build && npm run mcpb:build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "modelcontextprotocol",
    "mcp-server",
    "help-scout",
    "help-scout-api",
    "helpscout",
    "help scout",
    "customer-support",
    "typescript",
    "nodejs"
  ],
  "author": {
    "name": "Drew Burchfield",
    "url": "https://github.com/zackkatz"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zackkatz/help-scout-mcp-server.git"
  },
  "homepage": "https://github.com/zackkatz/help-scout-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/zackkatz/help-scout-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "lru-cache": "^10.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@anthropic-ai/dxt": "^0.2.6",
    "@types/jest": "^29.5.8",
    "@types/nock": "^10.0.3",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nock": "^14.0.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "cross-spawn": "^7.0.6",
    "brace-expansion": "^2.0.2"
  }
}
